{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "**/sjcl.js"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "consistent-return": [
            "error"
        ],
        "brace-style": [
            "error",
            "1tbs",
            { "allowSingleLine": true }
        ],
        "no-unused-vars": [
            "warn"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "no-useless-escape": [
            "warn"
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "max-len": [
            "warn",
            { "code": 80 }
        ]
    }
}